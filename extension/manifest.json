{
  "manifest_version": 3,
  "name": "Virtual Closet Cookie Manager",
  "version": "2.0.0",
  "description": "Saves and injects marketplace cookies",
  
  "permissions": [
    "cookies",
    "storage",
    "downloads",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://*.ebay.com/*",
    "*://*.poshmark.com/*",
    "*://*.depop.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Virtual Closet Cookie Manager",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.ebay.com/*",
        "*://*.poshmark.com/*",
        "*://*.depop.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:5173/*",
        "http://127.0.0.1:5173/*",
        "https://*.vercel.app/*"
      ],
      "js": ["app-content.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
