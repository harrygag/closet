{
  "manifest_version": 3,
  "name": "Virtual Closet - Marketplace Connector",
  "version": "1.0.0",
  "description": "Automatically sync your marketplace cookies to Virtual Closet for seamless scraping",
  "permissions": [
    "cookies",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.ebay.com/*",
    "https://*.poshmark.com/*",
    "https://*.depop.com/*",
    "https://*.vendoo.com/*",
    "http://localhost:5173/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.ebay.com/*",
        "https://*.poshmark.com/*",
        "https://*.depop.com/*",
        "https://*.vendoo.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:5173/*",
        "https://*.vercel.app/*"
      ],
      "js": ["app-content.js"],
      "run_at": "document_end"
    }
  ]
}

