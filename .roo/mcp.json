{
  "mcpServers": {
    "notion": {
      "command": "npx",
      "args": [
        "-y",
        "@notionhq/notion-mcp-server"
      ],
      "env": {
        "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer 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\", \"Notion-Version\": \"2022-06-28\"}"
      },
      "alwaysAllow": [
        "API-get-self",
        "API-post-search",
        "API-retrieve-a-page",
        "API-post-page"
      ]
    },
    "sequentialthinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "alwaysAllow": [
        "sequentialthinking"
      ]
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "alwaysAllow": [
        "puppeteer_navigate"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "alwaysAllow": [
        "create_entities",
        "read_graph",
        "search_nodes",
        "add_observations"
      ]
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository",
        "c:/Users/mickk/Desktop/netlify-closet"
      ],
      "alwaysAllow": [
        "git_status",
        "git_diff_unstaged",
        "git_log"
      ],
      "disabled": true
    },
    "git-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote@0.1.29",
        "https://gitmcp.io/harrygag/harrygag/closet"
      ],
      "alwaysAllow": [
        "fetch_harrygag_documentation"
      ]
    }
  }
}